{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description" : "A sample template",
  "Resources" : {
    "MyLaunchConfig" :{
       "Type" : "AWS::AutoScaling::LaunchConfiguration",
       "Properties" : {
          "AssociatePublicIpAddress" : "true",
          "ImageId" : "ami-55ef662f",
          "InstanceType" : "t2.micro",
          "KeyName" : "LabEC2KeyPair",
          "SecurityGroups" : [ "sg-f7311682" ],
          "UserData"       : { "Fn::Base64" : { "Fn::Join" : ["", [
             "#!/bin/bash -xe\n",
             "yum update -y\n",
             "yum install -y git\n",
             "git clone https://github.com/lindyslewis/RubySinatraTraining.git /home/ec2-user/rubyApp\n",
             "gpg2 --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3",
             "curl -L https://get.rvm.io | bash -s stable --ruby=2.0.0\n",
             "source ~/.rvm/scripts/rvm\n",
             "gem install sinatra\n",
             "ruby /home/ec2-user/rubyApp/app.rb >> /home/ec2-user/rubyApp/rubyApp.log\n"
		]]}}
      }
    },

    "MyASG" : {
       "Type" : "AWS::AutoScaling::AutoScalingGroup",
       "Properties" : {
          "DesiredCapacity" : "1",
          "HealthCheckType" : "EC2",
          "LaunchConfigurationName" :{ "Ref" : "MyLaunchConfig" },
          "MaxSize" : "1",
          "MinSize" : "1",
          "VPCZoneIdentifier" : ["subnet-f25ce8dd"]
       }
    }
    }
  }
